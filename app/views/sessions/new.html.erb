<!-- LOGIN FORM -->
<div class="text-center" style="padding:50px 0">
	<div class="logo">login</div>
	<!-- Main Form -->
	<div class="login-form-1">
		<form id="login-form" class="text-left">
			<div class="login-form-main-message"></div>
			<div class="main-login-form">
				<div class="login-group">
					<div class="form-group">
						<%= form_for :session do |f| %>
						<%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", id:"lg_username", name:"lg_username" %>

						<%= f.password_field :password, class: "form-control", placeholder: "Password", id: "lg_password", name: "lg_password" %>
								<%= f.submit "Sign Up", class: "btn btn-default login-button" %>
		</div>

						<% end %>
					</div>
					
				</div>
				<button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
			</div>
			<div class="etc-login-form">
				<p>new user? <a href="/signup">create new account</a></p>
			</div>
		</form>
	</div>
	<!-- end:Main Form -->

<div class="login">
	<div class="container">
		<div class="form">

      <h1>Log in</h1>
			
			<%= form_for(:session, url: login_path) do |f| %> 
			  <%= f.email_field :email, :placeholder => "Email" %> 
			  <%= f.password_field :password, :placeholder => "Password" %> 
			  <%= f.submit "Log in", class: "btn-submit" %>
			<% end %>
		
    </div>
	</div>
</div>
